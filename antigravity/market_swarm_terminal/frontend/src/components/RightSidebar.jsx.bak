          newMsgs[newMsgs.length - 1] = {
            ...lastMsg,
            role: 'assistant',
            text: accumulatedText,
            latency: totalTime,
            toolsUsed: Array.from(toolsUsedSet),
            recommendChart: recommendChart || lastMsg.recommendChart
