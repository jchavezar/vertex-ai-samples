          // WIDGET PARSING
          // Regex to find [WIDGET:SectionName]content[/WIDGET]
          const widgetRegex = /\[WIDGET:(\w+)\]([\s\S]*?)\[\/WIDGET\]/g;
          let match;
          while ((match = widgetRegex.exec(accumulatedText)) !== null) {
            const section = match[1];
